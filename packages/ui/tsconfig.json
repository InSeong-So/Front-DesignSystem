{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "declaration": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.story*",
    "**/*.spec*"
  ]
}